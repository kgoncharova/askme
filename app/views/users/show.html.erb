<div class="container">
  <div class="card">
    <div class="card-body" style="background-color: <%= @user.bgcolor %>">
      <div class="text-center">
        <h1><%= @user.name %></h1>

        <div>
          <%= image_tag user_avatar(@user), alt: '[Фото]', class: 'rounded' %>
        </div>

        <h3>@<%= @user.username %></h3>

        <div>
          <%= link_to "Спроси меня", '', class: 'btn btn-primary', id: 'ask-button' %> 

          <div class="form-group mt-3" id="ask-form">
            <%= form_for @new_question do |f| %>
              <%= f.hidden_field :user_id %>

              <div class="form-group">
                <%= f.label "Ваш вопрос для @#{@user.username}" %>
                <%= f.text_area :text, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= submit_tag 'Задать вопрос', class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>     
          
          <div class="row mt-4 mb-2">
            <div class="col">
              <h3><%= @questions_count %></h3>
              <p>вопросов</p>
            </div>
            <div class="col">
              <h3><%= @answers_count %></h3>
              <p>ответов</p>
            </div>
            <div class="col">
              <h3><%= @unanswered_count %></h3>
              <p>безответных</p>
            </div>
          </div>    
        </div>

      </div>

      <ul class="list-group">
        <div class="mt-3">
          <% if @questions.size.zero? %>
            <h2>У пользователя нет вопросов</h2>
          <% else %>
            <h2> 
              <%= @questions.size %>
              <%= incline(@questions.size, 'вопрос', 'вопроса', 'вопросов') %>
            </h2>
          <% end %>
        </div>
        <% @questions.each do |question| %>
          <li class="list-group-item"><%= render partial: 'questions/question', object: question %></li>
        <% end %>
      </ul>      
    </div>
  </div>
</div>
