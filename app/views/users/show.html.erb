<div class="container">
  <div class="card">
    <div class="card-body bg-light">
      <div class="text-center">
        <h1><%= @user.name %></h1>

        <div>
          <%= image_tag user_avatar(@user), alt: '[Фото]', class: 'rounded' %>
        </div>

        <h3>@<%= @user.username %></h3>

        <div>
          <%= link_to "Спроси меня", '', class: 'btn btn-primary'%>          
        </div>
      </div>

      <ul class="list-group">
        <div class="mt-3">
          <% if @questions.size.zero? %>
            <h2>У пользователя нет вопросов</h2>
          <% else %>
            <h2> 
              <%= @questions.size %>
              <%= incline(@questions.size, 'вопрос', 'вопроса', 'вопросов') %>
            </h2>
          <% end %>
        </div>

        <% @questions.each do |question| %>
          <li class="list-group-item"><%= render partial: 'questions/question', object: question %></li>
        <% end %>
      </ul>

      <div class="form-group mt-3">
        <%= form_for @new_question do |f| %>
          <%= f.hidden_field :user_id %>

          <div class="form-group">
            <%= f.label "Ваш вопрос для @#{@user.username}" %>
            <%= f.text_area :text, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= submit_tag 'Задать вопрос', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
