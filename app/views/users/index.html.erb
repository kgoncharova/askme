<div class="container">
  <div>
    <h3><%= t('links.our_users') %></h3>
  </div>

  <% @users.each do |user| %>
    <div class="d-inline-flex p-2 ">
      <%= link_to image_tag(user_avatar(user), class: 'user_avatar rounded'), user_path(user) %>
    </div>
  <% end %>
</div>

<div class="container mt-4">
  <div>
    <h3><%= t('links.hashtags') %></h3>
    <% @hashtags.each do |h| %>
      <%= change_hashtags_to_links(h.name) %>
    <% end %>
  </div>
</div>
